//The class with the methods that return formatted data as currency and percent

import java.text.NumberFormat;

public class FormattedOutput {
	public static String currencyOutput(double currency) {	//return formatted currency
		
		NumberFormat currencyReference = NumberFormat.getCurrencyInstance();
		String formattedCurrency = currencyReference.format(currency);
		return formattedCurrency;		
	}
	public static String percentOutput(double percent, int decimal) {
		
		NumberFormat percentReference = NumberFormat.getPercentInstance();
		String formattedPercent = percentReference.format(percent);
		percentReference.setMinimumFractionDigits(2);							//Mini 2 decimal points
		return formattedPercent;
	}	
}
